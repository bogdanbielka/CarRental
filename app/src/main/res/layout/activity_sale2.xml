<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sale2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:text="Name: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Driver's license #:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="#"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="195dp"
        android:layout_height="43dp"
        android:text="Deposit:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Deposit"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtCar"
        android:layout_width="379dp"
        android:layout_height="98dp"
        android:text="Car:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="379dp"
        android:layout_height="77dp"
        android:text="Total : "
        android:textAlignment="textStart"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="78dp"
            android:text="Calculate Total"
            app:layout_constraintEnd_toStartOf="@+id/btnBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="67dp"
            android:text="Book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnCalc"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>