<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:background="@drawable/round_conner_whitebg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCarModelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:text="Car Model"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtCarMakeInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCarMakeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:text="Car Make"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtCarModelInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Availability:"
        android:textAlignment="textEnd"
        android:textColor="#FFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtCarModelInfo"
        app:layout_constraintEnd_toEndOf="@+id/txtPricePerDay" />

    <TextView
        android:id="@+id/txtAvailableInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="true"
        android:textAllCaps="true"
        android:textColor="#7FFF00"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtAvailability"
        app:layout_constraintStart_toEndOf="@+id/txtAvailability" />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Type: "
        android:textColor="#FFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTypeInfo"
        app:layout_constraintStart_toStartOf="@+id/txtColor" />

    <TextView
        android:id="@+id/txtTypeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtColorInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="21dp"
        android:text="Seats:"
        android:textColor="#FFF"
        app:layout_constraintEnd_toStartOf="@+id/txtSeatsInfo"
        app:layout_constraintTop_toBottomOf="@+id/txtPricePerDay" />

    <TextView
        android:id="@+id/txtSeatsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="#"
        android:textColor="#FFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSeats"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txtColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Color: "
        android:textColor="#FFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtColorInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtColorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="color"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/txtSeats"
        app:layout_constraintStart_toEndOf="@+id/txtColor"
        app:layout_constraintTop_toTopOf="@+id/txtSeats" />

    <TextView
        android:id="@+id/txtPricePerDay"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="Price per day: "
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtSeats"
        app:layout_constraintStart_toStartOf="@+id/txtSeats"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPricePerDayInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#FFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtPricePerDay"
        app:layout_constraintStart_toStartOf="@+id/txtSeatsInfo" />


</android.support.constraint.ConstraintLayout>